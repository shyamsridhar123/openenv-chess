# Hugging Face Configuration
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_token_here

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Game Manager Configuration
MAX_CONCURRENT_GAMES=100
# Maximum number of games to keep in memory before LRU cleanup

# Agent Configuration
AGENT_TIMEOUT=30
# Timeout in seconds for agent move selection
AGENT_MAX_RETRIES=3
# Number of retries for illegal moves before random fallback

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
# Comma-separated list of allowed CORS origins

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
# Maximum API requests per minute per IP

# Model Configuration
DEFAULT_MODEL=Qwen/Qwen2.5-7B-Instruct
# Default LLM model for agents
# Options: Qwen/Qwen2.5-7B-Instruct, meta-llama/Llama-3.2-3B-Instruct, microsoft/Phi-3-mini-4k-instruct

# Performance Configuration
MOVE_ANIMATION_MS=200
# Board animation duration in milliseconds
BOARD_UPDATE_INTERVAL_S=2
# Auto-play interval between moves in seconds

# Metrics Configuration
ENABLE_METRICS=true
METRICS_PORT=8000
# Prometheus metrics exposed at /metrics endpoint

# Development Configuration
DEBUG=false
RELOAD=false
# Set to true for development auto-reload

# Opening Book Configuration
OPENING_BOOK_ENABLED=true
OPENING_BOOK_API_URL=https://explorer.lichess.ovh/masters
OPENING_BOOK_TIMEOUT=1.0
OPENING_BOOK_CACHE_SIZE=1000
# Lichess Masters database for grandmaster opening theory

# Tablebase Configuration
TABLEBASE_ENABLED=true
TABLEBASE_API_URL=https://tablebase.lichess.ovh/standard
TABLEBASE_TIMEOUT=1.0
# Syzygy endgame tablebase for perfect play with 7 or fewer pieces
